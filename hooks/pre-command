#!/bin/bash

echo "$BUILDKITE_PLUGIN_WRITE_FILE_PATH"
echo "$BUILDKITE_PLUGIN_WRITE_FILE_CONTENTS"

# Make sure the path exists
DIR=$(dirname $BUILDKITE_PLUGIN_WRITE_FILE_PATH)
mkdir -p $DIR

ls -lsa
ls -lsa $DIR

# Write the file
echo "$BUILDKITE_PLUGIN_WRITE_FILE_CONTENTS" > $BUILDKITE_PLUGIN_WRITE_FILE_PATH

ls -lsa $DIR

cat $BUILDKITE_PLUGIN_WRITE_FILE_PATH
